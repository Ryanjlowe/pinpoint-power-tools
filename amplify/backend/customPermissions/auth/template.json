{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Import test",
    "Parameters": {
        "env": {
            "Type": "String"
        },
        "authRoleName": {
            "Type": "String"
        },
        "analyticspinpointpowertoolsId" : {
            "Type": "String"
        }
    },
    "Resources": {
        "PinpointCognitoAuthPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "auth-user-pinpoint-policy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "mobiletargeting:GetEndpoint",
                                "mobiletargeting:ListTemplates",
                                "mobiletargeting:GetEmailTemplate"
                            ],
                            "Resource": [
                                "*"
                            ]
                        }
                    ]
                },
                "Roles": [
                    {
                        "Ref": "authRoleName"
                    }
                ]
            }
        }
    }
}
